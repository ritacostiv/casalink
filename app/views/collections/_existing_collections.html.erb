<!-- app/views/collections/_existing_collections.html.erb -->

<% collections.each do |collection| %>

  <div class="collection-card collection-existing">
    <%= image_tag "lisbon.jpg", alt: "Collection image", class: "collection-image" %>
  <div class="existing-collection-blue">

    <div class="collection-meta">
      <%= pluralize(collection.properties.count, 'property') %> â€¢ Last updated <%= time_ago_in_words(collection.updated_at) %>
    </div>
    </div>
    <div class="collection-details">
      <%= link_to collection_path(collection), class: "collection-card-link" do %>
      <h3 class="collection-name"><%= collection.name %></h3><% end %>
      <div class="collection-actions">
       <%= render "shared/addproperty_button", collection: collection, property: Property.new %>
       <%= render "shared/share_button", collection: collection %>
      </div>
    </div>
  </div>
<% end %>
