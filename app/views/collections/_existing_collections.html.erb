<% @collections.each do |collection| %>
  <div class="collection-card collection-existing">
    <div class="collection-content">
      <div class="collection-meta">
        <div class="properties-info">
          <%= collection.properties.count %> properties â€¢ Last updated <%= time_ago_in_words(collection.updated_at) %>
        </div>
      </div>
      <div class="collection-details">
        <h3 class="collection-name"><%= link_to collection.name, collection_path(collection), style: "text-decoration: none;" %></h3>
        <div class="collection-actions">
          <div class="add-property-btn">+</div>
          <span class="add-property-text">Add Property</span>
        </div>
      </div>
    </div>
  </div>
<% end %>
