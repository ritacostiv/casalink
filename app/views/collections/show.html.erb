  <!-- app/views/collections/_show.html.erb -->

<div class="main-container" style="max-width: 1400px; margin: 0 auto; padding: 20px;">

  <!-- Header section -->
  <%= render 'shared/show/header', collection: @collection, collections: @collections %>

  <!-- Content area -->
  <div class="content area" style="display: flex; gap: 20px;">

  <!-- Left column - Property cards -->
  <div class="left column" style="flex: 0 0 40%; overflow-y: auto;">
    <div class="properties-list" style="flex: 0 0 40%; overflow-y: auto; padding-left: 0px;">
    <!-- Property Cards  -->
      <% @collection.properties.each do |property| %>
      <%= render 'shared/show/propertycard', collection: @collection, properties: @properties, property: property %>
      <% end %>
      <%#= render 'shared/show/propertycard2', collection: @collection, properties: @properties %>
    </div>
  </div>

  <!-- Right column - Details -->
  <%= render 'shared/show/rightcolumn' %>

</div>
</div>

<form action="/search" method="get" class="d-flex align-items-center mb-4">
  <input type="hidden" name="collection_id" value="<%= @collection.id %>">
  <input type="text" name="query" class="form-control" placeholder="Search within this collection" value="<%= params[:query] %>">
  <button type="submit" class="btn btn-primary ms-2">Search</button>
</form>
