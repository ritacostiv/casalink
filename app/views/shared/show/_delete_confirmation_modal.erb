<!-- app/views/shared/show/_delete_confirmation_modal.html.erb -->
<div class="modal fade" id="deleteConfirmationModal<%= property.id %>" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content custom-branded-alert" style="position: relative; transform: none; top: auto; left: auto;">
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="position: absolute; top: 10px; right: 10px;"></button>

      <div class="alert-content">
        <div class="logo-container">
          <img src="<%= asset_path('logo.png') %>" class="brand-logo" alt="Logo">
        </div>
        <div class="alert-message">
          Are you sure you want to delete this property?
        </div>

        <h5 class="text-muted" style="margin-bottom: 20px;"><strong><%= property.name %></strong></h5>

        <div style="display: flex; justify-content: center; gap: 15px; margin-top: 15px;">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= button_to "Delete Property",
              collection_property_path(property.collection, property),
              method: :delete,
              class: "btn",
              style: "background-color: #AE161B; color: white; border: none;",
              form: { data: { turbo_method: :delete } }
          %>
        </div>
      </div>
    </div>
  </div>
</div>
