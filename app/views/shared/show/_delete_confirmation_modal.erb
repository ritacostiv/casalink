<!-- app/views/shared/show/_delete_confirmation_modal.html.erb -->
<div class="modal fade" id="deleteConfirmationModal<%= property.id %>" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" style="background-color: #F2994A; color: white;">
        <h5 class="modal-title" id="deleteConfirmationModalLabel">Are you sure you want to delete this property?</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h5 class="text-muted"><strong><%= property.name %></strong></h5>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= button_to "Delete Property",
            collection_property_path(property.collection, property),
            method: :delete,
            class: "btn",
            style: "background-color: #F2994A; color: white;",
            form: { data: { turbo_method: :delete } }
        %>
      </div>
    </div>
  </div>
</div>
