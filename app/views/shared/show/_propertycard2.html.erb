<!-- Property Card -->
<div class="property-card" style="background-color: white; border-radius: 12px; overflow: hidden; margin-bottom: 20px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); padding: 20px;">
  <div style="display: flex; gap: 20px;">
    <!-- Property image -->
    <div class="property-image" style="flex: 0 0 40%; position: relative;">
      <img src="https://img4.idealista.pt/blur/WEB_DETAIL_TOP-L-P/0/id.pro.pt.image.master/59/57/02/278189286.jpg" alt="Kitchen" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px;">

      <!-- Image carousel dots -->
      <div style="position: absolute; bottom: 10px; left: 0; right: 0; text-align: center;">
        <span style="display: inline-block; width: 8px; height: 8px; border-radius: 50%; background-color: white; margin: 0 3px;"></span>
        <span style="display: inline-block; width: 8px; height: 8px; border-radius: 50%; background-color: rgba(255,255,255,0.5); margin: 0 3px;"></span>
        <span style="display: inline-block; width: 8px; height: 8px; border-radius: 50%; background-color: rgba(255,255,255,0.5); margin: 0 3px;"></span>
      </div>
    </div>

     <!-- Property details -->
    <div class="property-details" style="flex: 1;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px;">
  <div style="display: flex; align-items: center;">
    <h2 style="margin: 0; font-size: 22px; font-weight: 600;"><%= collection.properties.name %></h2>
    <span style="margin-left: 8px; font-size: 20px;">📍</span>
  </div>
   <div style="color: #F2994A; font-weight: 600; font-size: 16px;">4.5/5</div>
</div>

<div>
  <a href="#" style="color: #F2994A; text-decoration: none; font-size: 14px; display: flex; align-items: center; margin-bottom: 12px;">
    <span style="color: #F2994A; font-size: 14px; margin-right: 5px;">💬</span>
    3 comments
  </a>
</div>

      <!-- Amenities - first row -->
      <div style="display: flex; flex-wrap: wrap; gap: 8px; margin-bottom: 10px; margin-top: 15px;">
        <span style="border: 1px solid #F2994A; color: #F2994A; padding: 6px 12px; border-radius: 50px; font-size: 12px;">Doorman</span>
        <span style="border: 1px solid #F2994A; color: #F2994A; padding: 6px 12px; border-radius: 50px; font-size: 12px;">Pool</span>
        <span style="border: 1px solid #F2994A; color: #F2994A; padding: 6px 12px; border-radius: 50px; font-size: 12px;">Rooftop</span>
        <span style="border: 1px solid #F2994A; color: #F2994A; padding: 6px 12px; border-radius: 50px; font-size: 12px;">Gym</span>
      </div>

      <!-- Amenities - second row -->
      <div style="display: flex; flex-wrap: wrap; gap: 8px; margin-bottom: 20px;">
        <span style="border: 1px solid #F2994A; color: #F2994A; padding: 6px 12px; border-radius: 50px; font-size: 12px;">Doorman</span>
        <span style="border: 1px solid #F2994A; color: #F2994A; padding: 6px 12px; border-radius: 50px; font-size: 12px;">Pool</span>
        <span style="border: 1px solid #F2994A; color: #F2994A; padding: 6px 12px; border-radius: 50px; font-size: 12px;">Gym</span>
      </div>
    </div>
  </div>

  <!-- Bottom section with attribution and view details link -->
  <div style="display: flex; justify-content: space-between; padding-top: 15px; margin-top: 10px; border-top: 1px solid #f0f0f0;">
    <div style="display: flex; align-items: center;">
  <span style="color: #F2994A; font-size: 14px; margin-right: 5px;">🔗</span>
  <span style="color: #666; font-size: 14px;">by <a href="https://www.idealista.pt/imovel/33967024/" target="_blank" style="color: #F2994A; text-decoration: none;"><%= collection.user.first_name %></a></span>
</div>
    <div style="display: flex; align-items: center;">
      <a href="#" style="color: #F2994A; text-decoration: none; font-size: 14px;">View details</a>
    </div>
  </div>
</div>
