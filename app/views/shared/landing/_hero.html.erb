<section class="hero">
  <div class="line top-line"></div>
  <div class="line bottom-line"></div>

  <div class="decorative-circle circle-top-left"></div>
  <div class="decorative-circle circle-top-right"></div>
  <div class="decorative-circle circle-bottom-right"></div>

  <div class="pop-up-card">
    <div class="card-container">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="hero-content">
              <div class="logo-large">
                <div class="logo-icon">
                  <%= image_tag "house-solid.png", alt: "CasaLink house icon", style: "width: 80%; height: auto;" %>
                </div>
                <h1>CasaLink</h1>
              </div>
              <div class="hero-text">
                <h3><%= t('housing.tagline')%></h3>
              </div>
              <div class="hero-cta">
                <a href="/collections" class="btn btn-primary btn-large"><%= t('button.begin')%></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
