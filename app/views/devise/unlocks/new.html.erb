<div class="unlock-container">
  <h2 class="unlock-heading">Resend Unlock Instructions</h2>

  <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "unlock-form" }) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :unlock_token %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label: "Email Address" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Resend Unlock Instructions", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <div class="additional-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
