<div class="edit-account-container">
  <h2 class="edit-account-heading">Edit <%= resource.first_name %>'s Account</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "edit-account-form" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, required: true, autofocus: true %>
      <%= f.input :last_name, required: true %>
      <%= f.input :email, required: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="reconfirmation-message">
          Waiting for confirmation for: <%= resource.unconfirmed_email %>
        </p>
      <% end %>

      <%= f.input :password,
                  hint: "Leave blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>

      <%= f.input :password_confirmation, input_html: { autocomplete: "new-password" } %>

      <%= f.input :current_password,
                  hint: "We need your current password to confirm changes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= button_to "Cancel my account", registration_path(resource_name),
                  data: { turbo_method: :delete, confirm: "Are you sure?" },
                  class: "btn btn-danger btn-block" %>
  </div>

  <%= link_to "Back", :back, class: "back-link" %>
</div>
