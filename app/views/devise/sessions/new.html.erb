<div class="login-container">
  <h2 class="login-heading">Log In</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label: "Email Address" %>

      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "current-password" },
                  label: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="remember-me-container">
        <div class="remember-me">
          <%= f.check_box :remember_me, class: "remember-checkbox" %>
          <%= f.label :remember_me, "Remember Me" %>
        </div>
      </div>
    <% end %>

    <div class="form-actions">
      <%= f.button :submit, "Log In", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <div class="additional-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
